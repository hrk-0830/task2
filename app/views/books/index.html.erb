<body>
  <%= flash[:notice] %>
  <h1>Books</h1>
  <!--ここからtable-->
  <table>
    <tr>
      <th>title</th> <th>body</th> <th></th>
    </tr>
    <% @books.each do |book| %>
      <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      
      <td>
        <%= link_to "Show", book_show_path(book.id) %>
        <%= link_to "Edit", book_edit_path(book.id) %>
        <%= link_to "Destroy", book_destroy_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
      </tr>
    <% end %>
  </table>
  <!--ここから投稿フォーム-->
      <h1>New book</h1>

    <div ="form-box">
        <% if @book.errors.any? %>
          <div class ="error-box">
              <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
        <%= form_with model: @book do |f| %>
          <h5>Title</h5>
          <%= f.text_field :title %>

          <h5>Body</h5>
          <%= f.text_area :body %>

          <%= f.submit 'Create book' %>
        <% end %>
      </div>

</body>