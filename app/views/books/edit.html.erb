<body>
  <h1>Editing Book</h1>
  
  <%= form_with model: @book, url: book_update_path(@book.id), method: :patch do |f| %>
  
    <h5>title</h5>
    <%= f.text_field :title %>
  
    <h5>body</h5>
    <%= f.text_area :body %>
  
    <%= f.submit 'Update Book' %>
  <% end %>
  <p>
    <%= link_to "Show", book_show_path(@book.id) %>
    |
    <%= link_to "Back", book_path %>
  </p>
</body>
