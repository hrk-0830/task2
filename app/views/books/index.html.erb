<body>
  <h1>Books</h1>
  <!--ここからtable-->
  <table>
    <tr>
      <th>title</th> <th>body</th> <th></th> <th></th> <th></th>
    </tr>
    <% @book.each do |book| %>
      <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <!--あとで-->
      <td>show</td>
      <td>edit</td>
      <td>destroy</td>
      </tr>
    <% end %>
  </table>
  <!--ここから投稿フォーム-->
      <h2>New book</h2>
  
  <div ="form-box">
    <%= form_with model: @books do |f| %>
    
      <h5>Title</h5>
      <%= f.text_field :title %>
    
      <h5>Body</h5>
      <%= f.text_area :body %>
    
      <%= f.submit 'Create book' %>
    <% end %>
  </div>


</body>